<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:context=".main.plans.view.items.MentiItemHolder">

    <ImageView
            android:id="@+id/menti_item_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_profile_default"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" />

    <TextView
            android:id="@+id/menti_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            tools:text="Стив Джобс"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"

            app:layout_constrainedWidth="true"

            app:layout_constraintStart_toEndOf="@+id/menti_item_avatar"
            app:layout_constraintTop_toTopOf="@+id/menti_item_avatar"
            android:layout_marginStart="10dp" />

    <TextView
            android:id="@+id/menti_item_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="@string/menti_info_new_menti"
            android:textColor="@color/black"
            android:textSize="14sp"

            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@+id/menti_item_name"
            app:layout_constraintStart_toStartOf="@+id/menti_item_name" />

    <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/telegram_button_text"
            android:textSize="5dp"
            android:id="@+id/menti_send_button"
            app:layout_constraintTop_toBottomOf="@+id/menti_item_about"
            app:layout_constraintStart_toEndOf="@+id/menti_item_avatar"
            android:drawableLeft="@drawable/ic_telegram"
            style="@style/TelegramButtonStyle"/>

    <Button
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:drawableLeft="@drawable/ic_apply"
            android:text="@string/apply_button_text"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/menti_apply_button"
            style="@style/ApplyButtonStyle"
            tools:ignore="SmallSp,TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/menti_item_name" />

    <Button
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:drawableLeft="@drawable/ic_reject"
            android:text="@string/reject_button_text"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menti_apply_button"
            android:id="@+id/menti_cancel_button"
            style="@style/RejectButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

    <View
            android:id="@+id/mentor"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:src="@drawable/mentor_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/mentor_info__avatar"
            app:layout_constraintTop_toTopOf="@id/mentor"
            app:layout_constraintStart_toStartOf="@id/mentor"
            app:layout_constraintBottom_toBottomOf="@id/mentor"
            />

    <TextView
            tools:text="Стив Джобс"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mentor_info__name"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="@id/mentor_info__avatar"
            app:layout_constraintStart_toEndOf="@id/mentor_info__avatar"
            android:padding="2dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintVertical_chainStyle="packed" />

    <TextView
            tools:text="Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:ellipsize="end"
            android:id="@+id/mentor_info__description"
            app:layout_constrainedWidth="true"
            android:padding="2dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/mentor"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/mentor_info__avatar"
            app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/mentor_info__skills_list"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="@+id/mentor"
            app:layout_constraintStart_toEndOf="@+id/mentor_info__avatar"
            app:layout_constraintTop_toBottomOf="@+id/mentor_info__name">

        <com.google.android.material.chip.ChipGroup
                app:singleLine="true"
                android:id="@+id/mentor_info__skills"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        tools:context=".PlanItemFragment">

    <ImageView
            android:id="@+id/plan_item_title_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_icon"
            app:layout_constraintStart_toEndOf="@+id/plan_item_title"
            app:layout_constraintBottom_toBottomOf="@+id/plan_item_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

    <TextView
            android:id="@+id/plan_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="10dp"
            android:text="Знакомство с Android"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"

            app:layout_constrainedWidth="true"


            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" />

    <HorizontalScrollView
                android:id="@+id/_plan_item_skills_for_laytout"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@+id/plan_item_title"
                app:layout_constraintStart_toStartOf="@+id/plan_progress_bar">

        <com.google.android.material.chip.ChipGroup
                app:singleLine="true"
                android:id="@+id/plan_item_skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </HorizontalScrollView>

        <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:maxHeight="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/plan_progress_bar"
                android:layout_weight="1"
                android:progress="25"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@+id/_plan_item_skills_for_laytout"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
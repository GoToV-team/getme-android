<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sign.login.view.ui.LoginFragment"
        android:padding="20dp">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verGuideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="681dp" />

    <TextView
            android:text="Создание плана"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/verGuideline3"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/new_plan_header" />

    <TextView
            android:text="Название"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_plan_header"
            app:layout_constraintStart_toStartOf="@+id/new_plan_header"
            android:id="@+id/new_plan_title_text"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_plan_title_input"
            app:layout_constraintTop_toBottomOf="@+id/new_plan_title_text"
            app:layout_constraintStart_toStartOf="@+id/new_plan_title_text" />

    <TextView
            android:text="Описание"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_plan_title_input"
            app:layout_constraintStart_toStartOf="@+id/new_plan_title_input"
            android:id="@+id/new_plan_about_text"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_plan_about_text"
            app:layout_constraintStart_toStartOf="@+id/new_plan_title_input"
            android:id="@+id/new_plan_about_input" />

    <TextView
            android:text="Скиллы"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_plan_about_input"
            app:layout_constraintStart_toStartOf="@+id/new_plan_about_input"
            android:id="@+id/new_plan_skills_text"
            android:layout_marginTop="20dp" />

    <com.pchmn.materialchips.ChipsInput
            android:id="@+id/chips_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Выберите скиллы плана"
            app:maxRows="3"
            app:chip_labelColor="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@+id/new_plan_error_text"
            app:layout_constraintStart_toStartOf="@+id/new_plan_error_text" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@+id/new_plan_about_input"
            android:id="@+id/new_plan_error_text"
            app:layout_constraintTop_toBottomOf="@+id/new_plan_about_input" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/new_plan_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            app:layout_constraintTop_toTopOf="@+id/verGuidelineDown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:text="Созать"
            app:icon="@drawable/ic_apply"
            app:layout_constraintHorizontal_bias="0.945" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verGuidelineDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>
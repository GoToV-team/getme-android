<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sign.login.view.ui.LoginFragment"
        android:padding="20dp">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verGuideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="681dp" />

    <TextView
            android:text="@string/new_task_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/verGuideline3"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/new_task_header" />

    <TextView
            android:text="@string/new_task_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_task_header"
            app:layout_constraintStart_toStartOf="@+id/new_task_header"
            android:id="@+id/new_task_title_text"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_task_title_input"
            app:layout_constraintTop_toBottomOf="@+id/new_task_title_text"
            app:layout_constraintStart_toStartOf="@+id/new_task_title_text" />

    <TextView
            android:text="@string/new_task_about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_task_title_input"
            app:layout_constraintStart_toStartOf="@+id/new_task_title_input"
            android:id="@+id/new_task_about_text"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_task_about_text"
            app:layout_constraintStart_toStartOf="@+id/new_task_title_input"
            android:id="@+id/new_task_about_input" />

    <TextView
            android:text="@string/new_task_skills_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_task_about_input"
            app:layout_constraintStart_toStartOf="@+id/new_task_about_input"
            android:id="@+id/new_task_data_text"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            tools:text="20.01.2022"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:maxLines="5"
            android:drawableEnd="@drawable/ic_baseline_event_24"
            android:drawablePadding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/new_task_data_text"
            app:layout_constraintStart_toStartOf="@+id/new_task_data_text"
            android:id="@+id/new_task_data_input" />


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/new_task_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            app:layout_constraintTop_toTopOf="@+id/verGuidelineDown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:text="@string/new_task_create_button_text"
            app:icon="@drawable/ic_apply"
            app:layout_constraintHorizontal_bias="0.945" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verGuidelineDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>
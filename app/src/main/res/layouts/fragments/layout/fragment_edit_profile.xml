<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.profile.view.ui.ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_central"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.96" />


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_watch__header__avatar"
            app:civ_border_width="1dp"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/black"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="@+id/line_1"
            app:layout_constraintLeft_toLeftOf="@id/profile_watch__header"
            app:layout_constraintTop_toTopOf="@+id/line_3" />

    <TextView
            android:id="@+id/profile_watch__header__fio"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:text="Василий Романов"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@id/profile_watch__header__fio_container"
            app:layout_constraintTop_toTopOf="@+id/line_3"
            app:layout_constraintStart_toEndOf="@+id/profile_watch__header__avatar" />


    <View
            android:id="@+id/profile_watch__skills_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/gray_light"
            app:layout_constraintEnd_toStartOf="@id/line_2"
            app:layout_constraintStart_toEndOf="@id/line_1"
            app:layout_constraintTop_toBottomOf="@+id/profile_watch__header__avatar" />

    <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:id="@+id/profile_watch__skills"
            app:layout_constraintStart_toStartOf="@id/profile_watch__skills_view"
            app:layout_constraintEnd_toEndOf="@id/profile_watch__skills_view"
            app:layout_constraintTop_toBottomOf="@+id/profile_watch__header__avatar" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_profile_input_name"
            android:layout_width="0dp"

            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/line_1"
            app:layout_constraintEnd_toStartOf="@+id/line_2"
            app:layout_constraintTop_toBottomOf="@+id/profile_watch__skills_view"
            app:layout_constraintBottom_toTopOf="@+id/edit_profile_save_button">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Работаю в vk\n   *опыт работы;\n   *стоимость;\n   *помог n людям." />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.SwitchCompat
            android:text="@string/edit_profile_switch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:theme="@style/SCBSwitch"
            app:layout_constraintTop_toBottomOf="@+id/profile_watch__header__fio"
            app:layout_constraintStart_toStartOf="@+id/profile_watch__header__fio" />

    <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="Сохранить"
            android:textSize="18sp"
            android:id="@+id/edit_profile_save_button"
            app:layout_constraintBottom_toTopOf="@+id/line_4"
            app:layout_constraintEnd_toStartOf="@+id/line_2"
            app:layout_constraintStart_toStartOf="@+id/line_1" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.profile.view.ui.ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_central"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.96" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toStartOf="@+id/line_2"
            app:layout_constraintStart_toStartOf="@+id/line_1"
            android:id="@+id/edit_profile_load_progress"
            android:indeterminate="true"
            app:layout_constraintBottom_toTopOf="@+id/line_3" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_profile_page_avatar"
            app:civ_border_width="1dp"
            android:src="@drawable/mentor_avatar"
            app:civ_border_color="@color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="@+id/line_1"
            app:layout_constraintTop_toTopOf="@+id/line_3"
            app:layout_constraintEnd_toStartOf="@+id/line_2" />

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/line_2"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:id="@+id/LayoutTgTag"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="@+id/line_1"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_status">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_profile_tg_tag_title"
                android:maxLines="1"
                android:textAlignment="center"
                android:textSize="15sp"
                tools:text="\@Dvarin"
                android:id="@+id/edit_profile_page_tg_tag"
                app:boxStrokeColor="@color/purple_500" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/line_2"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            app:hintEnabled="false"
            android:id="@+id/textInputLayout3"
            app:layout_constraintStart_toStartOf="@+id/line_1"
            app:layout_constraintTop_toBottomOf="@+id/LayoutTgTag">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_profile_page_first_name_title"
                android:maxLines="1"
                android:textAlignment="center"
                android:textSize="15sp"
                tools:text="Василий"
                android:id="@+id/edit_profile_page_first_name"
                app:boxStrokeColor="@color/purple_500" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/line_2"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
            android:id="@+id/textInputLayout4"
            app:layout_constraintStart_toStartOf="@+id/line_1">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_profile_page_last_name_title"
                android:maxLines="1"
                android:textSize="15sp"
                android:textAlignment="center"
                tools:text="Романов"
                android:id="@+id/edit_profile_page_last_name"
                app:boxStrokeColor="@color/purple_500" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.SwitchCompat
            android:text="@string/edit_profile_switch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_profile_status"
            android:theme="@style/SCBSwitch"
            android:textSize="16sp"
            android:padding="10dp"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_page_avatar"
            app:layout_constraintStart_toStartOf="@+id/line_1"
            app:layout_constraintEnd_toStartOf="@+id/line_2" />

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
            app:layout_constraintEnd_toStartOf="@+id/line_2"
            app:layout_constraintStart_toStartOf="@+id/line_1"
            app:boxBackgroundColor="@color/white"
            android:id="@+id/textInputLayout"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_profile_page_skills_title"
                android:maxLines="2"
                android:textSize="15sp"
                tools:text="Скиллы"
                android:id="@+id/edit_profile_page_skills_input" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintEnd_toStartOf="@+id/line_2"
            app:layout_constraintStart_toStartOf="@+id/line_1"
            app:boxBackgroundColor="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            app:hintEnabled="false"
            app:layout_constraintBottom_toTopOf="@+id/edit_profile_page_apply_button">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_profile_page_about_title"
                tools:text="Работаю в vk\n   *опыт работы;\n   *стоимость;\n   *помог n людям."
                android:maxLines="25"
                android:textSize="15sp"
                android:scrollbars="vertical"
                android:id="@+id/edit_profile_page_about_input" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/edit_profile_circyle_load_progress"
            android:indeterminate="true"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_page_apply_button"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_page_apply_button"
            app:layout_constraintBottom_toBottomOf="@+id/edit_profile_page_apply_button"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_page_apply_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit_profile_page_apply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:backgroundTint="@color/purple_500"
            android:contentDescription="@string/edit_profile_page_apply_button"
            app:srcCompat="@drawable/ic_apply"
            app:layout_constraintBottom_toTopOf="@+id/line_4"
            app:layout_constraintEnd_toStartOf="@+id/line_2" />


</androidx.constraintlayout.widget.ConstraintLayout>
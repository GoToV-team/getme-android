<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sign.signup.view.ui.RegisterFragment"
        android:padding="20dp">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verGuideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

    <TextView
            android:text="Регистрация"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/verGuideline3"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/register_header" />

    <TextView
            android:text="@string/register_page_username_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/register_header"
            app:layout_constraintStart_toStartOf="@+id/register_header"
            android:id="@+id/register_username_text"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_username_input"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/register_username_text"
            app:layout_constraintStart_toStartOf="@+id/register_username_text" />

    <TextView
            android:text="@string/register_page_password_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/register_username_input"
            app:layout_constraintStart_toStartOf="@+id/register_username_input"
            android:id="@+id/register_password_text"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/register_password_text"
            app:layout_constraintStart_toStartOf="@+id/register_username_input"
            android:lines="1"
            android:id="@+id/register_password_input"
            android:inputType="textPassword"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@+id/register_password_input"
            android:id="@+id/register_error_text"
            app:layout_constraintTop_toBottomOf="@+id/register_password_input" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_error_text"
            app:layout_constraintHorizontal_bias="0.688"
            android:indeterminate="true" />

    <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/register_page_register_button_text"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/register_error_text"
            app:layout_constraintEnd_toEndOf="@+id/register_password_input"
            app:layout_constraintStart_toStartOf="@+id/register_password_input"
            android:id="@+id/register_register_button"
            app:layout_constraintHorizontal_bias="0.953" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/telegram_login_button_text"
            android:textSize="9dp"
            android:drawableLeft="@drawable/ic_telegram"
            style="@style/TelegramButtonStyle"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/register_register_button"
            android:id="@+id/login_telegram_login_button"
            app:layout_constraintTop_toTopOf="@+id/verGuidelineDown" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verGuidelineDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.94" />
</androidx.constraintlayout.widget.ConstraintLayout>
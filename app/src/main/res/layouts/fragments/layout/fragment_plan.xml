<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".main_module.plan.view.ui.PlanFragment"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


        <TextView
                android:text="План развития"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        <TextView
                android:text="Знакомство с Android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plan_title"

                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

            <com.google.android.material.chip.ChipGroup
                    app:singleLine="true"
                    android:id="@+id/plan_skills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </HorizontalScrollView>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:src="@drawable/ic_baseline_person_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_info_small_avatar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp" />

            <TextView
                    android:text="Стив Джобс"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_info_small_name"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/user_info_small_avatar"
                    app:layout_constraintBottom_toTopOf="@id/user_info_small_note"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                    android:text="Новый менти"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_info_small_note"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintTop_toBottomOf="@id/user_info_small_name"
                    app:layout_constraintStart_toEndOf="@id/user_info_small_avatar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="2dp"
                    android:textSize="12sp" />


            <Button
                    android:text="Написать"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:drawableLeft="@drawable/ic_baseline_send_24"

                    app:layout_constraintEnd_toEndOf="parent"
                    android:backgroundTint="@color/telegram"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:maxHeight="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/progressBar"
                android:layout_weight="1"
                android:progress="25"
                android:layout_marginVertical="10dp" />

        <TextView
                android:text="Описание плана, такое чтобы Никита Куликов позавидовал"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plan_description"

                android:textSize="14sp"
                android:layout_marginVertical="10dp" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/task_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
        </androidx.recyclerview.widget.RecyclerView>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Добавить таску" />
    </LinearLayout>

</ScrollView>
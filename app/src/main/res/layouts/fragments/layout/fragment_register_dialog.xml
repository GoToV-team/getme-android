<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sign.login.view.ui.LoginFragment"
        android:padding="20dp">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verGuideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="773dp" />

    <TextView
            android:text="@string/register_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/verGuideline3"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/register_dialog_title" />

    <TextView
            android:text="@string/register_dialog_name_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/register_dialog_title"
            app:layout_constraintStart_toStartOf="@+id/register_dialog_title"
            android:id="@+id/register_dialog_name_title_input"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:id="@+id/register_dialog_name_input"
            app:layout_constraintTop_toBottomOf="@+id/register_dialog_name_title_input"
            app:layout_constraintStart_toStartOf="@+id/register_dialog_name_title_input" />

    <TextView
            android:text="@string/register_dialog_second_name_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/register_dialog_name_input"
            app:layout_constraintStart_toStartOf="@+id/register_dialog_name_input"
            android:id="@+id/register_dialog_second_name_input_title"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/register_dialog_second_name_input_title"
            app:layout_constraintStart_toStartOf="@+id/register_dialog_name_input"
            android:id="@+id/register_dialog_second_name_input" />

    <TextView
            android:text="@string/register_dialog_about_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/register_dialog_second_name_input"
            app:layout_constraintStart_toStartOf="@+id/register_dialog_second_name_input"
            android:id="@+id/register_dialog_about_title_input"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:lines="10"
            android:minLines="1"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:id="@+id/register_dialog_about_input"
            app:layout_constraintTop_toBottomOf="@+id/register_dialog_about_title_input"
            app:layout_constraintStart_toStartOf="@+id/register_dialog_about_title_input" />

    <TextView
            android:text="@string/register_dialog_skills_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/register_dialog_about_input"
            app:layout_constraintStart_toStartOf="@+id/register_dialog_about_input"
            android:id="@+id/register_dialog_skills_input_title"
            android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputEditText
            tools:text="@string/register_dialog_skills_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:maxLines="2"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:drawablePadding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/register_dialog_skills_input_title"
            app:layout_constraintStart_toStartOf="@+id/register_dialog_skills_input_title"
            android:id="@+id/register_dialog_skills_input" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:id="@+id/register_dialog_error_text"
            app:layout_constraintStart_toStartOf="@+id/register_dialog_second_name_input"
            app:layout_constraintBottom_toTopOf="@+id/verGuidelineDown" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/register_dialog_apply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            app:layout_constraintTop_toTopOf="@+id/verGuidelineDown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:text="@string/register_dialog_apply_button"
            app:icon="@drawable/ic_apply"
            app:layout_constraintHorizontal_bias="0.945" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verGuidelineDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>
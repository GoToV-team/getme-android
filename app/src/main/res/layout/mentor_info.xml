<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
            android:src="@drawable/mentor_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/mentor_info__avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    <TextView
            android:text="Стив Джобс"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mentor_info__name"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="@id/mentor_info__avatar"
            app:layout_constraintStart_toEndOf="@id/mentor_info__avatar"
            app:layout_constraintBottom_toTopOf="@id/mentor_info__skills"
            android:padding="2dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintVertical_chainStyle="packed" />

    <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mentor_info__description"
            android:layout_marginStart="8dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@id/mentor_info__skills"
            app:layout_constraintStart_toEndOf="@id/mentor_info__avatar"
            android:padding="2dp"
            android:textSize="12sp"
            />

    <com.google.android.material.chip.ChipGroup
            app:layout_constraintStart_toStartOf="@id/mentor_info__name"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mentor_info__name"
            app:singleLine="true"
            android:id="@+id/mentor_info__skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/mentor_info__avatar"
            app:layout_constraintHorizontal_bias="0.0">

        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Скилл"
                android:textSize="11sp"
                android:theme="@style/Theme.MaterialComponents.Bridge"
                android:checkable="false" />

        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Скилл"
                android:textSize="11sp"
                android:theme="@style/Theme.MaterialComponents.Bridge"
                android:checkable="false" />

        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Скилл"
                android:textSize="11sp"
                android:theme="@style/Theme.MaterialComponents.Bridge"
                android:checkable="false" />
    </com.google.android.material.chip.ChipGroup>
</androidx.constraintlayout.widget.ConstraintLayout>

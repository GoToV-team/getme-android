<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_central"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

    <View
            android:id="@+id/main_page__header"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_gray_light"
            app:layout_constraintStart_toStartOf="@id/line_1"
            app:layout_constraintEnd_toEndOf="@id/line_2"
            app:layout_constraintTop_toTopOf="@id/line_3"
            app:layout_constraintLeft_toRightOf="@id/line_1"
            app:layout_constraintRight_toLeftOf="@id/line_2"
            />

    <TextView
            android:id="@+id/main_page__header__mentor"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="Менторы"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/main_page__header"
            app:layout_constraintLeft_toLeftOf="@id/main_page__header"
            app:layout_constraintTop_toTopOf="@id/main_page__header"
            />

    <View
            android:id="@+id/skills"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_gray_light"
            app:layout_constraintTop_toBottomOf="@id/main_page__header"
            app:layout_constraintEnd_toStartOf="@id/line_2"
            app:layout_constraintStart_toEndOf="@id/line_1"
            />


</androidx.constraintlayout.widget.ConstraintLayout>